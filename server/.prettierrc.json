{
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*.html", "*.hbs", "*.css"],
      "options": {
        "printWidth": 200,
        "singleQuote": true,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.jsx", "*.js"],
      "options": {
        "printWidth": 137,
        "singleQuote": true,
        "tabWidth": 2,
        "bracketSameLine": true
      }
    }
  ]
}
